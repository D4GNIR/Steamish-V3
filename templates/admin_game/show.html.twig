{% extends 'base-admin.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
<div class='container'>
<a href="{{ path('app_admin_game')}}" class="btn btn-steamish p-1"><i class="fa-solid fa-circle-arrow-left"></i></a>
    <h1 class="mt-3">{{ game.name }}</h1>
    <div class="row mt-3">
    <ul>
      <li class="mt-2">Prix : {{ game.price }} €</li>
      <li class="mt-2">Date de publication : {{ game.publishedAt|date("d/m/Y") }}</li>
      <li class="mt-2">Description : {{ game.description }}</li>
      <li class="mt-2">Langue disponible :
      {% for country in game.countries %}
        <img src="{{ country.urlFlag }}" alt="">
      {% endfor %}
      </li>
      <li class="mt-2">Genres :
      {% for genre in game.genres %}
        <p>{{ genre.name }}</p>
      {% endfor %}
      </li>
      {% if game.publisher != null %}
      <li class="mt-2">Editeur : {{ game.publisher.name }}</li>
      {% else %}
      <li>Pas d'éditeur</li>
      {% endif %}
      {% if game.thumbnailLogo != null %}
      <li class="mt-2">Image logo : <img src="{{ game.thumbnailLogo }}" alt="img" class="img-fluid"></li>
      {% endif %}
      <li class="mt-2">Image de couverture : <img src="{{ game.thumbnailCover }}" alt="img" class="img-fluid"></li>
    </ul>
    </div>
</div>
{% endblock %}