{% block title %}Hello AdminGameController!{% endblock %}

{% block body %}
<div class="container">
    <div class=''>
        {# <a href="{{ path('///') }}" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i></a> #}
    </div>
    <table class="table table-hover text-light table-dark">
        <tr class="row">
            <td class="col-lg-3"><b>Nom</b></td>
            <td class="col-lg-3"><b>Prix</b></td>
            <td class="col-lg-3"><b>Date de parution</b></td>
