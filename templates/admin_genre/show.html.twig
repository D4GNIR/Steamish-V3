{% extends 'base-admin.html.twig' %}

{% block title %}{{ genre.name }}{% endblock %}

{% block body %}
<div class='container'>
<a href="{{ path('app_adminGenre')}}" class="btn btn-steamish p-1"><i class="fa-solid fa-circle-arrow-left"></i></a>
    <h1 class="mt-3">{{ genre.name }}</h1>
    <div class="row mt-3">
            <ul class="text-left">
        {% for myGame in genreGames %}

          <li> <a href="{{ path('gameSlug', {'slug': myGame.slug}) }}" class="link">{{ myGame.name }}</a> </li>

        {% endfor %}
                </ul>
    </div>
</div>
{% endblock %}