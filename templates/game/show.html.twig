{% extends 'base.html.twig' %}

{% block title %}{{ myGame.name }}{% endblock %}

{% block body %}
<div class="container my-3">
    <div class="d-flex justify-content-around my-3">    
        <div class="col-12 col-lg-6 bg-greyo">
            {% if myGame.thumbnailLogo is not null %}
                <img src="{{ myGame.thumbnailLogo }}" class="card-img-top" alt="{{ myGame.slug }}">
            {% else %}
                <img src="./assets/images/maxresdefault.jpg">
            {% endif %}
        </div>

        <div class="col-12 col-lg-5 bg-greyo text-center d-flex align-items-center">
            <h3>{{ myGame.name }}</h3>            
            <p class="fs-3">{{ myGame.price }}€</p>
            <button type="button" class="btn btn-steamish"><i class="fa-regular fa-heart"></i></button>
            <button type="button" class="btn btn-steamish">Acheter</button>
        </div>
    </div>

    <div class="d-flex justify-content-around my-3">
        <div class="col-12 col-lg-6 bg-greyo">
            <h4>À propos du jeu</h4>
            <p>{{ myGame.description }}</p>
        </div>

        <div class="col-12 col-lg-5 bg-greyo">
            <p><b>Langue(s): </b>Test</p>
            <p><b>Editeur(s): </b>Test</p>
            <p><b>Date de sortie: </b>{{ myGame.publishedAt|date("d M y") }}</p>
            <p><b>Genre(s): </b>Test</p>
        </div>
    </div>
</div>
{% endblock %}
