{% extends 'base-front.html.twig' %}

{% block title %}Tous les jeux{% endblock %}

{% block body %}
<div class="container my-3">
    <a href="{{ path('app_home')}}" class="btn btn-steamish p-1 m-2">
        <i class="fa-solid fa-circle-arrow-left"></i>
    </a>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-6">
            {{form_row(form.name)}}
        </div>
        <div class="col-6">
            {{form_row(form.published_at)}}
        </div>
        <div class="col-6">
            {{form_row(form.price_min)}}
        </div>
        <div class="col-6">
            {{form_row(form.price_max)}}
        </div>
    </div>



    {{ form_end(form) }}
    <div class="row">
        {% for myGame in pagination %}
        <div class="card-game col-12 col-md-4 col-lg-3">
            {% include "game/_card.html.twig" %}
        </div>
        {% endfor %}
    </div>
    <div>
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}