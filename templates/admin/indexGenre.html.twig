{% extends 'base-admin.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<div class="container">
    <div class=''>
        <a href="" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i></a>
    </div>
    <table class="table table-hover text-light table-dark">
        <tr class="row">
            <td class="col-lg-3"><b>Nom</b></td>
            <td class="col-lg-3"><b>Lire</b></td>
            <td class="col-lg-3"><b>Editer</b></td>
            <td class="col-lg-3"><b>Supprimer</b></td>
        </tr>
    {% for genre in genres %}
        <tr class="row">
            <td class="col-lg-3">
                <p class="link">
                    {{ genre.name }}
                </p>
            </td>
            <td class="col-lg-3">
                <a class="btn btn-primary" href="{{ path('app_genre_show', {'slug': genre.slug}) }}">
                    <i class="fa-solid fa-eye"></i>
                </a>
            </td>
            <td class="col-lg-3">
                <a class="btn btn-steamish" href="{{ path('app_genre_edit', {'slug': genre.slug}) }}">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
            </td>
            <td class="col-lg-3">
                <a class="btn btn-danger" href="{{ path('app_genre_delete', {'slug': genre.slug}) }}">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
         </tr>
    {% endfor %}
</div>
{% endblock %}
