{% extends 'base-admin.html.twig' %}

{% block title %}{{ publisher.name }}{% endblock %}

{% block body %}
<div class='container'>
    <a href="{{ path('app_adminPublisher')}}" class="btn btn-steamish p-1">
        <i class="fa-solid fa-circle-arrow-left"></i>
    </a>
    <h1 class="mt-3">{{ publisher.name }}</h1>
    <p>
        Website :
        <a href="{{ publisher.website }}">{{ publisher.website }}</a>
    </p>
    <p>Créé le {{ publisher.createdAt|date("d/m/Y") }}</p>
    <p>Origine : {{ publisher.country.name }}</p>
    <hr>
    <div class="row mt-3">
        <h4>Les jeux de l'éditeur</h4>
        <ul class="text-left">
        {% for publisher in publisher.games %}
            <li>
                <a href="{{ path('gameSlug', {'slug': publisher.slug}) }}" class="link">{{ publisher.name }}</a>
            </li>
        {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}